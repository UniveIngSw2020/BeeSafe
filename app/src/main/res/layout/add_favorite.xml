<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/addFavText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:text="@string/addFavText"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/streetNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:text="@string/streetName"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:text="Name:"
        android:textColor="@color/place_autocomplete_prediction_primary_text_highlight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:inputType="text"
        android:shadowColor="@color/colorPrimary"
        android:textCursorDrawable="@null" />

    <CheckBox
        android:id="@+id/notificationsCheckBox"
        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:buttonTint="@color/colorPrimary"
        android:checked="true"
        android:fontFamily="sans-serif"
        android:text="@string/notifications"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/place_autocomplete_prediction_primary_text_highlight"
        android:textSize="18sp"
        app:useMaterialThemeColors="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:text="@string/cancel"

            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnSave"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:text="@string/save"
            android:textColor="@android:color/white" />

    </LinearLayout>



</LinearLayout>