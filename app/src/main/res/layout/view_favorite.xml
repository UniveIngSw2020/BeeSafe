<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/removeFavText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:text="@string/remove_this_place_from_favorites"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/streetNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:text="@string/streetName"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/customNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:text="@string/namePlace"
        android:textColor="@color/place_autocomplete_prediction_primary_text_highlight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/crowdedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:text="@string/crowded"
        android:textColor="@color/place_autocomplete_prediction_primary_text_highlight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/approximationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:text="@string/blank"
        android:textColor="@color/place_autocomplete_prediction_primary_text_highlight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lastUpdateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:text="@string/blank"
        android:textColor="@color/place_autocomplete_prediction_primary_text_highlight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:text="@string/cancel"

            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnRemove"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:text="@string/remove"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>